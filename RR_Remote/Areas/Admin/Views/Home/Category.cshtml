@model RR_Remote.Models.DTO.CategoryDTO
@{
    ViewData["Title"] = "Category";
    Layout = "~/Areas/Admin/Views/Shared/_Adminlayout.cshtml";
}
<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category/</span> Add Categories</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">@ViewBag.Heading</h5>
                </div>
                <div class="card-body">
                    @if (TempData["msg"] != null)
                    {
                        <div class="alert alert-success">@TempData["msg"]</div>
                    }
                    @if (TempData["errormsg"] != null)
                    {
                        <div class="alert alert-danger">@TempData["errormsg"]</div>
                    }
                    <form action="Category" method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Category Name</label>
                            <div class="col-sm-10">
                                @Html.HiddenFor(a => a.Id, new { @class = "form-control" })
                                @Html.TextBoxFor(a => a.CategoryName, new { @class = "form-control", placeholder = "Enter Category Name", @required = "" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Brand</label>
                            <div class="col-sm-10">
                                @Html.DropDownListFor(a => a.BrandId, Model.Brands, "--Select Brand--", new { @class = "form-control", @required = "" })
                                <span class="text-danger">
                                    @Html.ValidationMessageFor(a => a.BrandId)
                                </span>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label" for="basic-default-name">Image</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(a => a.ImageFile, new { @class = "form-control", type = "file" })
                                @if (!string.IsNullOrEmpty(Model.Image))
                                {
                                    <a href="/Images/@Model.Image"> <img class="thumb" src="/Images/@Model.Image" style="width:100px;" /></a>
                                }
                            </div>
                        </div>
                        
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">@ViewBag.btnText</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container-xxl flex-grow-1 container-p-y">

    <!-- Hoverable Table rows -->
    <div class="card">
        <h5 class="card-header">Category List</h5>
        <div class="table-responsive text-nowrap">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Category Name</th>
                        <th>Brand Name</th>
                        <th>Create Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var item in Model.CategoryList)
                    {
                        <tr>
                            <td><a href="~/Images/@item.Image"><img src="~/Images/@item.Image" style="width:100px;" alt="Avatar" class="rounded-circle"></a></td>
                            <td>@item.CategoryName</td>
                            <td>@item.BrandName</td>
                            <td>@item.CreatedDate</td>
                            <td>
                                <a href="/Admin/Home/Category?Id=@item.Id" class="btn btn-primary">Edit</a>
                                <a href="/Admin/Home/CategoryDelete?Id=@item.Id" class="btn btn-danger" onclick="return confirm('Are you sure want to delete?')">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <!--/ Hoverable Table rows -->

</div>
<!-- / Content -->