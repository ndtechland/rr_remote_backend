<script>
        document.addEventListener("DOMContentLoaded", function () {
        const currentUrl = window.location.pathname.toLowerCase();
        const menuItems = document.querySelectorAll(".menu-inner .menu-item > a");

        menuItems.forEach(item => {
            const href = item.getAttribute("href").toLowerCase();
            if (href === currentUrl) {
                const menuItem = item.closest(".menu-item");
                menuItem.classList.add("active");

                // If it's a submenu item, expand the parent
                const parentSubmenu = menuItem.closest(".menu-sub");
                if (parentSubmenu) {
                    parentSubmenu.style.display = "block";
                    const toggleLink = parentSubmenu.previousElementSibling;
                    if (toggleLink) {
                        toggleLink.classList.add("active");
                    }
                }
            }
        });
    });

</script>



